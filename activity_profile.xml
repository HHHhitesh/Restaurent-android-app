<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imghitesh"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/hitesh"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitesh Choudhary"
        android:layout_toRightOf="@id/imghitesh"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textSize="18sp"

        />
    <TextView
        android:id="@+id/gmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="informationsH.webs@gmail.com"
        android:layout_toRightOf="@id/imghitesh"
        android:layout_below="@id/name"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginTop="20dp"

        />
    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 7748020897"
        android:layout_toRightOf="@id/imghitesh"
        android:layout_below="@id/gmail"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@id/imghitesh"
        android:text="more informations"
        android:background="#1565e0"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#ffffff"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff1744"
        android:text="Exit the app"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"/>

        </RelativeLayout>
